---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title">Jayden Harrod</h1>
		<h2 class="mb-6 text-xl">Senior Frontend Engineer</h2>
		<p class="mb-12">
			In my engineering career, I've focused on mastery of web development with 7 commerical years
			of experience maintaining React codebases in start ups, marketplaces, and scale ups. I have a
			strong passion for engineering leadership, project management, and digital products.
		</p>
		<p class="mb-12">
			I currently work at <a class="cactus-link" href="https://camplify.com/"
				>Camplify Holdings Limited as an Engineering Manager</a
			>. Previously worked at <a class="cactus-link" href="https://betmakers.com/"
				>BetMakers Technology Group (Lead Dev)</a
			>, <a class="cactus-link" href="https://hipagesgroup.com.au/">hipages Group (FE)</a>, <a
				class="cactus-link"
				href="https://nib.com.au/">nib (FE)</a
			> and <a class="cactus-link" href="https://digivizer.com/">Digivizer (FE)</a>. I enjoy music
			production, outdoor adventure, bouldering, organisation, and tiny homes üè°
		</p>
		<section aria-label="Blog post list" class="mt-16">
			<h2 class="title mb-4 text-xl">Latest</h2>
			<ul class="space-y-4 sm:space-y-2">
				{
					allPostsByDate.map((p) => (
						<li class="flex flex-col gap-x-2 sm:flex-row">
							<PostPreview post={p} />
						</li>
					))
				}
			</ul>
		</section>
		<section aria-label="Pulse" class="mt-16">
			<h2 class="title mb-4 text-xl">Pulse</h2>
			<ul class="space-y-4 sm:space-y-2">
				<li class="flex flex-col gap-x-2 sm:flex-row">
					<span class="min-w-[120px] text-gray-500">Working from:</span>
					<span>Newcastle, Australia</span>
				</li>
				<li class="flex flex-col gap-x-2 sm:flex-row">
					<span class="min-w-[120px] text-gray-500">Working on:</span>
					<a
						href="https://www.coursera.org/professional-certificates/google-project-management?"
						class="cactus-link"
						target="_blank">Google Project Management Certification</a
					>
				</li>
				<li class="flex flex-col gap-x-2 sm:flex-row">
					<span class="min-w-[120px] text-gray-500">Working on:</span>
					<a href="https://youtube.com/jaydenharrod" class="cactus-link" target="_blank"
						>YouTube Channel</a
					>
				</li>
			</ul>
		</section>
	</section>
</PageLayout>
